"Fix Vanilla Mob Names":
    type: world
    events:
        on entity dies:
            - if <context.entity.isactivemob> 
            {
                - if <context.entity.activemob.displayname> == null 
                {
                    - adjust <context.entity.activemob.mythicmob.display_name>:<context.entity.activemob.mobtype>
                }
            }
